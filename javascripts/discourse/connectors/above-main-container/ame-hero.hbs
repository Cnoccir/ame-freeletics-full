<div class="motto-strip">
  <div class="container">
    <div class="hero-motto">{{theme-setting 'hero_motto_text'}}</div>
  </div>
</div>

<div class="banner-box hero">
  <div class="container">
    <div class="hero-nav" role="navigation" aria-label="Hero navigation">
      <a class="crumb" href="/c">{{theme-setting 'hero_nav_title_text'}}</a>
      <span class="sep">â€º</span>
      <a class="tab" href="/categories">subcategories</a>
      <a class="tab" href="/tags">tags</a>
      <a class="tab active" href="/latest">Latest</a>
      <a class="tab" href="/top">Top</a>
    </div>

    <div class="hero-header">
      {{#if (theme-setting 'hero_logo_url')}}
        <img class="hero-logo" src="{{theme-setting 'hero_logo_url'}}" alt="logo" />
      {{/if}}
      <div class="hero-site">{{theme-setting 'banner_title_text'}}</div>
    </div>

    <div class="section-header">
      <div class="colored-line"></div>
    </div>

    <div class="hero-cards" role="navigation" aria-label="Hero category shortcuts">
      {{#if (theme-setting 'hero_card_1_label')}}
        <a class="hero-card" href="{{theme-setting 'hero_card_1_url'}}"><span class="dot"></span><span class="label">{{theme-setting 'hero_card_1_label'}}</span></a>
      {{/if}}
      {{#if (theme-setting 'hero_card_2_label')}}
        <a class="hero-card" href="{{theme-setting 'hero_card_2_url'}}"><span class="dot"></span><span class="label">{{theme-setting 'hero_card_2_label'}}</span></a>
      {{/if}}
      {{#if (theme-setting 'hero_card_3_label')}}
        <a class="hero-card" href="{{theme-setting 'hero_card_3_url'}}"><span class="dot"></span><span class="label">{{theme-setting 'hero_card_3_label'}}</span></a>
      {{/if}}
      {{#if (theme-setting 'hero_card_4_label')}}
        <a class="hero-card" href="{{theme-setting 'hero_card_4_url'}}"><span class="dot"></span><span class="label">{{theme-setting 'hero_card_4_label'}}</span></a>
      {{/if}}
    </div>
  </div>
</div>
