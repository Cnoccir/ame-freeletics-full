<div class="ame-hero-container">
    {{! Banner Box with Background Image }}
    <div class="ame-banner-box">
      <div class="ame-banner-overlay"></div>
      <div class="ame-banner-content">
        <h1 class="ame-anthem">{{theme-setting "hero_motto_text"}}</h1>
      </div>
    </div>

    {{! Category Navigation Dropdown Style }}
    <div class="ame-categories-wrapper">
      <div class="ame-categories-header">
        <button class="ame-categories-toggle">
          <span class="ame-toggle-text">categories</span>
          <svg class="ame-toggle-icon" width="12" height="8" viewBox="0 0 12 8" fill="currentColor">
            <path d="M1.41 0L6 4.58 10.59 0 12 1.41l-6 6-6-6z"/>
          </svg>
        </button>
        <button class="ame-tags-toggle">
          <span class="ame-toggle-text">tags</span>
          <svg class="ame-toggle-icon" width="12" height="8" viewBox="0 0 12 8" fill="currentColor">
            <path d="M1.41 0L6 4.58 10.59 0 12 1.41l-6 6-6-6z"/>
          </svg>
        </button>
        <div class="ame-view-tabs">
          <a href="/categories" class="ame-tab active">Categories</a>
          <a href="/latest" class="ame-tab">Latest</a>
          <a href="/top" class="ame-tab">Top</a>
        </div>
      </div>

      {{! Category Grid }}
      <div class="ame-category-grid">
        <a href="{{theme-setting "hero_card_1_url"}}" class="ame-category-card">
          <div class="ame-category-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <div class="ame-category-info">
            <h3 class="ame-category-title">{{theme-setting "hero_card_1_label"}}</h3>
            <div class="ame-category-stats">
              <span class="stat">26 topics</span>
            </div>
          </div>
        </a>

        <a href="{{theme-setting "hero_card_2_url"}}" class="ame-category-card">
          <div class="ame-category-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z"/>
            </svg>
          </div>
          <div class="ame-category-info">
            <h3 class="ame-category-title">{{theme-setting "hero_card_2_label"}}</h3>
            <div class="ame-category-stats">
              <span class="stat">2.0k topics</span>
            </div>
          </div>
        </a>

        <a href="{{theme-setting "hero_card_3_url"}}" class="ame-category-card">
          <div class="ame-category-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
            </svg>
          </div>
          <div class="ame-category-info">
            <h3 class="ame-category-title">{{theme-setting "hero_card_3_label"}}</h3>
            <div class="ame-category-stats">
              <span class="stat">45 topics</span>
            </div>
          </div>
        </a>

        <a href="{{theme-setting "hero_card_4_url"}}" class="ame-category-card">
          <div class="ame-category-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
            </svg>
          </div>
          <div class="ame-category-info">
            <h3 class="ame-category-title">{{theme-setting "hero_card_4_label"}}</h3>
            <div class="ame-category-stats">
              <span class="stat">717 topics</span>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
